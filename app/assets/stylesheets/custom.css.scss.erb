@font-face {
  font-family: 'MontserratRegular';
  src:url('<%= asset_path('MontserratRegular.ttf') %>');
  src:url('<%= asset_path('MontserratRegular.eot?#iefix') %>') format('embedded-opentype'),
    url('<%= asset_path('MontserratRegular.svg#Montserrat-Regular') %>') format('svg'),
    
    url('<%= asset_path('MontserratRegular.ttf') %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}
@import "bootstrap-sprockets";
@import "bootstrap";


*{
  padding: 0;
  margin: 0;
}
html{
  height: 100%;
  width: 100%;
}
body{
  height: 100%;
  width: 100%;
  font-family: 'MontserratRegular', sans-serif;
  background-color: rgba(155,155,155,0.2);
}
.bPhotos{
  background-size: cover;
  background-repeat:no-repeat;
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path 'image1.jpg' %>);
}
.footer{
 background-color: rgba(0,0,0,0.5);
 position:fixed;
 bottom:0;
 width:100%;
 height:35px;
}
.link{
 text-decoration:none;
 color:white;
 transition: 0.8s;
 -webkit-transition: 0.8s;
 &:hover{
  text-decoration:none;
  color:greenyellow;
  transition: 0.8s;
  -webkit-transition: 0.8s;
 }
}


/* miscellaneous */

.debug_dump {
  position:fixed;
  bottom:0;
  display:block;
  width: 100%;
  margin-top: 45px;
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}


input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 8px;
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}

input {
  height: auto !important;
}

.bPhotos{
position:absolute;
}

.showMeOnTop{
position:fixed;
top:60%;
left:75%;
}

.fixMeOnScreen{
position:fixed;
top:10%;
background-color: rgba(255,255,255,0.7);
padding-bottom:5px;
}

#error_explanation {
  color: red;
  ul {
    color: red;
    text-align: center;
     list-style-type: none;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}
.showGif{
display:none;
}