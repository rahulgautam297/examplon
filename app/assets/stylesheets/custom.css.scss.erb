@font-face {
  font-family: 'Montserrat-Regular';
  src:url('<%= asset_path('MontserratRegular.ttf') %>');
  src:url('<%= asset_path('MontserratRegular.eot?#iefix') %>') format('embedded-opentype'),
    url('<%= asset_path('MontserratRegular.svg#Montserrat-Regular') %>') format('svg'),
    url('<%= asset_path('MontserratRegular.woff') %>') format('woff'),
    url('<%= asset_path('MontserratRegular.ttf') %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}
@import "bootstrap-sprockets";
@import "bootstrap";
*{
  padding: 0;
  margin: 0;
}
html{
  height: 100%;
  width: 100%;
}
body{
  height: 100%;
  width: 100%;
  font-family: 'Montserrat-Regular', sans-serif;
  background-color: rgba(155,155,155,0.2);
}
.bPhotos{
  background-size: cover;
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path 'image1.jpg' %>);
}
.footer{
 background-color: rgba(0,0,0,0.5);
 position:fixed;
 bottom:0;
 width:100%;
 height:35px;
}
.link{
 text-decoration:none;
 color:white;
 transition: 0.8s;
 -webkit-transition: 0.8s;
 &:hover{
  text-decoration:none;
  color:greenyellow;
  transition: 0.8s;
  -webkit-transition: 0.8s;
 }
}